<h1>New Task</h1>

<%= form_for(Task.new) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :details %>
    <%= f.text_area :details %>

    <%= f.label :completed %>
    <%= f.check_box :completed %>

    <%= f.submit 'Create Task' %>

<% end %>

<%= link_to 'Back to Tasks', tasks_path %>
