<div class="container my-5">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p>Status:
    <% if @task.completed %>
      <i class="fas fa-check-square"></i> Completed
    <% else %>
      <i class="far fa-square"></i> Pending
    <% end %>
  </p>

  <%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-secondary' %>
  <%= link_to 'Edit Task', edit_task_path(@task), class: 'btn btn-primary' %>
</div>
